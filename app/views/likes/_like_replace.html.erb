<span id="likeform-<%= @micropost.id %>">
  <% if @micropost.liked?(current_user) %>
    <%= form_for(@micropost.likes.find_by(user_id: current_user.id), method: :delete, remote: true) do |f| %>
      <%= button_tag(class: "btn btn-default btn-xs  done-icon-color") do %>
        <%= image_tag "icon/hand-thumbs-up-fill" %><%= @micropost.likes.count %>
      <% end %>
    <% end %>
  <% else %>
    <%= form_for(@micropost.likes.build, remote: true) do |f| %>
      <div><%= hidden_field_tag :micropost_id, @micropost.id %></div>
      <%= button_tag(class: "btn btn-default btn-xs") do %>
        <%= image_tag "icon/hand-thumbs-up" %><%= @micropost.likes.count %>
      <% end %>
    <% end %>
  <% end %>
</span>
